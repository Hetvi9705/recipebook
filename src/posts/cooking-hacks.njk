---
layout: base.njk
pagination:
  data: cookingHacks
  size: 1
  alias: hack
  addAllPagesToCollections: true
permalink: "cooking-hacks/{{ hack.slug }}/index.html"
eleventyComputed:
  title: "{{ hack.title }} - My CookBook"
  description: "{{ hack.description }}"
---

<article class="cooking-hack-single">
    <header class="hack-header">
        {% if hack.featuredImage %}
        <div class="hack-hero-image">
            <img src="{{ hack.featuredImage }}" alt="{{ hack.title }}">
        </div>
        {% endif %}
        
        <div class="hack-header-content">
            <h1>{{ hack.title }}</h1>
            <div class="hack-meta">
                <span class="publish-date">
                    <i class="far fa-calendar"></i>
                    {{ hack.date }}
                </span>
                {% if hack.author %}
                <span class="author">
                    <i class="fas fa-user"></i>
                    {{ hack.author }}
                </span>
                {% endif %}
            </div>
            {% if hack.description %}
            <p class="hack-excerpt">{{ hack.description }}</p>
            {% endif %}
        </div>
    </header>

    <div class="container">
        <div class="hack-content">
            {% if hack.content %}
            <div class="content-body">
                {{ hack.content | safe }}
            </div>
            {% else %}
            <div class="no-content">
                <p>Content coming soon!</p>
            </div>
            {% endif %}

            <div class="hack-footer">
                <a href="/cooking-hacks/" class="back-button">
                    <i class="fas fa-arrow-left"></i>
                    Back to All Cooking Hacks
                </a>
            </div>
        </div>
    </div>
</article>

<style>
    .cooking-hack-single {
        min-height: 100vh;
    }

    .hack-hero-image {
        width: 100%;
        height: 400px;
        overflow: hidden;
    }

    .hack-hero-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hack-header-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
        text-align: center;
        background: linear-gradient(135deg, #FFF5E6 0%, #FFE8CC 100%);
        margin: -50px 20px 0;
        border-radius: 20px;
        position: relative;
        z-index: 2;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .hack-header-content h1 {
        font-size: 2.8rem;
        color: var(--navy);
        margin-bottom: 20px;
        font-family: 'Georgia', serif;
        line-height: 1.2;
    }

    .hack-meta {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-bottom: 30px;
        color: #666;
        font-size: 1rem;
    }

    .hack-meta span {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .hack-excerpt {
        font-size: 1.2rem;
        line-height: 1.6;
        color: #555;
        font-style: italic;
    }

    .hack-content {
        max-width: 800px;
        margin: 80px auto 0;
        padding: 0 20px 60px;
    }

    .content-body {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #333;
    }

    .content-body h2 {
        color: var(--navy);
        margin: 40px 0 20px;
        font-size: 2rem;
    }

    .content-body h3 {
        color: var(--coral);
        margin: 30px 0 15px;
        font-size: 1.5rem;
    }

    .content-body p {
        margin-bottom: 20px;
    }

    .content-body ul, .content-body ol {
        margin: 20px 0;
        padding-left: 30px;
    }

    .content-body li {
        margin-bottom: 10px;
    }

    .hack-footer {
        margin-top: 60px;
        padding-top: 30px;
        border-top: 1px solid #eee;
        text-align: center;
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 24px;
        background: var(--navy);
        color: white;
        text-decoration: none;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .back-button:hover {
        background: var(--coral);
        transform: translateY(-2px);
    }

    .no-content {
        text-align: center;
        padding: 60px 20px;
        color: #666;
        font-style: italic;
    }

    @media (max-width: 768px) {
        .hack-header-content {
            margin: -30px 15px 0;
            padding: 30px 15px;
        }

        .hack-header-content h1 {
            font-size: 2rem;
        }

        .hack-meta {
            flex-direction: column;
            gap: 15px;
        }

        .hack-hero-image {
            height: 300px;
        }
    }
</style>