---
layout: ../_includes/base.njk
pagination:
  data: posts
  size: 1
  alias: post
permalink: "/posts/{{ post.slug }}/"
---

<article class="single-post">

  <h1>{{ post.title }}</h1>

  <p class="meta">
    <strong>Published:</strong> {{ post.publishedDate | readableDate }}  
    â€¢  
    <strong>Author:</strong> {{ post.author }}
  </p>

  {% if post.featuredImage %}
  <img src="{{ post.featuredImage }}" alt="{{ post.title }}" class="featured-image">
  {% endif %}

  {% if post.description %}
  <h3>Description</h3>
  <p>{{ post.description }}</p>
  {% endif %}

  {% if post.body %}
  <h3>Recipe Details</h3>
  <div class="body-content">
    {{ post.body | safe }}
  </div>
  {% endif %}

  {% if post.ingredients %}
  <h3>Ingredients</h3>
  <div class="ingredients">
    {{ post.ingredients | safe }}
  </div>
  {% endif %}

  {% if post.method %}
  <h3>Method</h3>
  <div class="method">
    {{ post.method | safe }}
  </div>
  {% endif %}

</article>
